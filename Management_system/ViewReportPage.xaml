<Page x:Class="Management_system.ViewReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <TextBlock Text="DANH SÁCH PHẢN ÁNH / GÓP Ý"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#CC0000"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- DATA GRID -->
        <DataGrid x:Name="dtgReports"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  IsReadOnly="True"
                  Margin="0,10,0,0">

            <DataGrid.Columns>

                <DataGridTextColumn Header="ID" Width="80" Binding="{Binding id}"/>

                <DataGridTextColumn Header="Nội dung" Width="300"
                                    Binding="{Binding content}"/>

                <DataGridTextColumn Header="Ngày gửi" Width="200"
                                    Binding="{Binding request_date}"/>

                <DataGridTemplateColumn Header="Chi tiết" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem"
                                    Background="#0094FF"
                                    Foreground="White"
                                    Padding="5"
                                    Click="BtnDetail_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
