<Page x:Class="Management_system.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      
      Title="AccountPage"
      Background="White">

    <Grid Margin="40, 30">
        <!-- ⭐ CARD MATERIAL DESIGN -->
        <Border Background="White"
                CornerRadius="12"
                Padding="25"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{DynamicResource CardShadow}">

            <Border.Resources>
                <!-- Đổ bóng Material -->
                <DropShadowEffect x:Key="CardShadow"
                                  Color="#000000"
                                  BlurRadius="18"
                                  ShadowDepth="3"
                                  Opacity="0.25"/>
            </Border.Resources>

            <StackPanel>

                

                <!-- STYLE CHUNG -->
                <StackPanel.Resources>

                    <!-- Dòng thông tin -->
                    <Style x:Key="InfoRow" TargetType="StackPanel">
                        <Setter Property="Orientation" Value="Horizontal"/>
                        <Setter Property="Margin" Value="0,10"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        
                    </Style>

                    <!-- Nhãn -->
                    <Style x:Key="LabelStyle" TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Width" Value="160"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>

                    <!-- Giá trị -->
                    <Style x:Key="ValueStyle" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#444"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>

                </StackPanel.Resources>
                <!-- ⭐ TIÊU ĐỀ -->
                <TextBlock Text="Thông Tin Tài Khoản Admin"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#B00020"
                           Margin="0,0,0,20"/>

                <!-- ⭐ Mã Admin -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="User" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <!-- ICON -->
                    <TextBlock Text="Mã Admin:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding AdminId}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- ⭐ Tên Admin -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="UserCircle" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <TextBlock Text="Tên Admin:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding AdminName}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- ⭐ Giới tính -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="VenusMars" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <TextBlock Text="Giới tính:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding Gender}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- ⭐ Email -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="Envelope" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- ⭐ Số điện thoại -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="Phone" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <TextBlock Text="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding Phone}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- ⭐ Địa chỉ -->
                <StackPanel Style="{StaticResource InfoRow}">
                    <fa:ImageAwesome Icon="Home" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                    <TextBlock Text="Địa chỉ:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding Address}" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>

</Page>
