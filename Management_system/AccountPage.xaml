<Page x:Class="Management_system.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPage"
      Background="White">

    <Grid Margin="30">
        <StackPanel>

            <TextBlock Text="Thông Tin Tài Khoản Admin" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="DarkRed" 
                   Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Mã Admin: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding AdminId}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Tên Admin: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding AdminName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Giới tính: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding Gender}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding Email}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Số điện thoại: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding Phone}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Địa chỉ: " FontWeight="Bold" Width="150"/>
                <TextBlock Text="{Binding Address}"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</Page>
