<Page x:Class="Management_system.ManageStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="20">

        <!-- Tạo bố cục 3 hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Thanh công cụ -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Form nhập liệu -->
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <TextBlock Text="QUẢN LÝ SINH VIÊN"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#CC0000"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Thêm" Padding="10,3" Margin="0,34,10,0.4" Width="100"
                                Click="BtnAdd_Click"/>
            <Button Content="Tìm kiếm" Padding="10,3" Margin="0,34,0,0.4" Width="100" Click="BtnSearch_Click"/>
            <TextBox x:Name="txtSearch" Width="300" Height="30" Margin="0,34,0,0.4"/>
        </StackPanel>
        <DataGrid x:Name="dtgStudent"
          Grid.Row="1"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          RowHeight="40"
          Margin="0,10,0,10"
          IsReadOnly="True">

            <DataGrid.Columns>

                <!-- STT -->
                <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}"/>

                <DataGridTextColumn Header="MSSV" Width="100" Binding="{Binding student_id}"/>
                <DataGridTextColumn Header="Họ tên" Width="200" Binding="{Binding full_name}"/>
                <DataGridTextColumn Header="Giới tính" Width="100" Binding="{Binding gender}"/>
                <DataGridTextColumn Header="Email" Width="200" Binding="{Binding email}"/>
                <DataGridTextColumn Header="Khoa" Width="100" Binding="{Binding khoa}"/>
                <DataGridTextColumn Header="Ngành" Width="200" Binding="{Binding major}"/>

                <!-- Chi tiết -->
                <DataGridTemplateColumn Header="Chi tiết" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Chi tiết"
                            Background="#0094FF"
                            Foreground="White"
                            Padding="5"
                            Margin="5"
                            Click="BtnDetail_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                
                <!-- Action -->
                <DataGridTemplateColumn Header="Action" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Sửa -->
                                <Button Content="Sửa" Background="#0275d8"
                                Foreground="White" Padding="5" Margin="5,0"
                                Click="BtnEdit_Click"/>

                                <!-- Xóa -->
                                <Button Content="Xóa" Background="#d9534f"
                                Foreground="White" Padding="5" Margin="5,0"
                                Click="BtnDelete_Click"/>
                                <!-- Thêm -->
                                
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>


    </Grid>

</Page>
