<Window x:Class="Management_system.AddNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="AddNotificationWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Tạo thông báo"
                   FontSize="22" FontWeight="Bold"
                   Foreground="#CC0000"
                   HorizontalAlignment="Center"/>

        <!-- Loại người nhận -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Đối tượng nhận:"/>
            <ComboBox x:Name="cbTarget" Height="30" Width="200">
                <ComboBoxItem Content="Tất cả"/>
                <ComboBoxItem Content="Sinh viên"/>
                <ComboBoxItem Content="Giảng viên"/>
            </ComboBox>
        </StackPanel>

        <!-- Tiêu đề -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Tiêu đề:"/>
            <TextBox x:Name="txtTitle" Height="30"/>
        </StackPanel>

        <!-- Nội dung -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="Nội dung:"/>
            <TextBox x:Name="txtContent"
                     Height="150"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Nút gửi -->
        <Button Grid.Row="4"
                Content="Gửi thông báo"
                Background="#CC0000" Foreground="White"
                Height="40"
                Click="BtnSend_Click"/>
    </Grid>
</Window>
