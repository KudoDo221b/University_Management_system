<Window x:Class="AdminPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống quản trị " Height="600" Width="1400"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- HEADER TRÊN CÙNG (giống myDTU) -->
        <Grid DockPanel.Dock="Top" Height="76" Background="#CC0000" Margin="0,0,-0.4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Logo / tên hệ thống -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0" >
                <Image Source="images/logo.png" Width="70" Height="70" VerticalAlignment="Center">
                    <Image.Clip>
                        <EllipseGeometry Center="35,35" RadiusX="35" RadiusY="35"/>
                    </Image.Clip>
                </Image>
                
            </StackPanel>

            <!-- Menu top -->
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" >
                <StackPanel.Resources>
                    
                </StackPanel.Resources>
                <Button Content="Trang chủ" Style="{StaticResource GlowButton}" Height="Auto" Width="Auto" Click="BtnHome_Click"/>
                <Button Content="Forum" Click="BtnForum_Click"/>
                <Button Content="Email" Click="BtnEmail_Click"/>
                <Button Content="e-Lib" Click="BtnELib_Click"/>
            </StackPanel>

            <!-- Khu vực user / ngôn ngữ -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="0,0,10,0">
                <TextBlock Text="Xin chào, Admin" Foreground="White"
                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                <Button Content="Thoát" Padding="12,5"
                        BorderThickness="0"
                        Background="LightGray" FontWeight="Bold"
                        Foreground="Black" Click="BtnExit_Click"/>
            </StackPanel>
        </Grid>

        <!-- STATUS BAR DƯỚI CÙNG -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Hệ thống sẵn sàng"/>
        </StatusBar>

        <!-- NỘI DUNG CHÍNH -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- SIDEBAR TRÁI -->
                <ColumnDefinition Width="230"/>
                <!-- VÙNG CONTENT -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR ADMIN -->
            <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0"
                    Background="#FAFAFA">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding adminName}" Background="#CC0000" Padding="5" FontSize="15" FontWeight="Bold" Foreground="White"
                               Margin="0,0, 0, 12" Height="25" TextAlignment="Center"/>

                    <Button Content="Thông tin tài khoản" Style="{StaticResource GlowButton}"
                            Margin="0,0,0,5" Padding="5" Click="Account_Info"/>

                    <Separator Margin="0,5"/>

                    <TextBlock Text="Quản lý" FontWeight="Bold" Margin="0,5"/>

                    <Button Content="Quản lý Sinh viên"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLSinhVien_Click"/>

                    <Button Content="Quản lý Giảng viên"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLGiangVien_Click"/>

                    <Button Content="Quản lý Môn học"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLMonHoc_Click"/>

                    <Button Content="Quản lý Lớp học phần"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLLop_Click"/>

                    <Button Content="Quản lý lịch"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLLich_Click"/>

                    <Separator Margin="0,5"/>

                    <Button Content="Gửi thông báo"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLThongBao_Click"/>

                    <Button Content="Hướng dẫn sử dụng"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnHDSD_Click"/>
                </StackPanel>
            </Border>

            
        </Grid>
        <!-- FRAME HIỂN THỊ PAGE -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
