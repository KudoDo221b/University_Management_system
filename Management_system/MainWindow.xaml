<Window x:Class="AdminPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống quản trị " Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- HEADER TRÊN CÙNG (giống myDTU) -->
        <Grid DockPanel.Dock="Top" Height="76" Background="#CC0000" Margin="0,0,-0.4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Logo / tên hệ thống -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0" >
                <Image Source="images/logo.png" Width="80" Height="80" RenderTransformOrigin="1.875,1.755">
                    <Image.Clip>
                        <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                    </Image.Clip>
                </Image>
                <TextBlock Text=" |  Admin Portal" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="20" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Menu top -->
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" >
                <Button Content="Trang chủ" Margin="5" Padding="10,3" Click="BtnHome_Click"/>
                <Button Content="Forum" Margin="5" Padding="10,3" Click="BtnForum_Click"/>
                <Button Content="Email" Margin="5" Padding="10,3" Click="BtnEmail_Click"/>
                <Button Content="e-Lib" Margin="5" Padding="10,3" Click="BtnELib_Click"/>
            </StackPanel>

            <!-- Khu vực user / ngôn ngữ -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="0,0,10,0">
                <TextBlock Text="Xin chào, Admin" Foreground="White"
                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                <Button Content="Thoát" Padding="10,3" Click="BtnExit_Click"/>
            </StackPanel>
        </Grid>

        <!-- STATUS BAR DƯỚI CÙNG -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Hệ thống sẵn sàng"/>
        </StatusBar>

        <!-- NỘI DUNG CHÍNH -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- SIDEBAR TRÁI -->
                <ColumnDefinition Width="230"/>
                <!-- VÙNG CONTENT -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR ADMIN -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0"
                    Background="#F5F5F5">
                <StackPanel Margin="10">
                    <TextBlock Text="Đỗ Văn Hiếu (Admin)" Background="#CC0000" FontSize="15" FontWeight="Bold" Foreground="White"
                               Margin="0,0,-0.4,10" Height="25"/>

                    <Button Content="Thông tin tài khoản"
                            Margin="0,0,0,5" Padding="5" Click="Account_Info"/>

                    <Separator Margin="0,5"/>

                    <TextBlock Text="Quản lý" FontWeight="Bold" Margin="0,5"/>

                    <Button Content="Quản lý Sinh viên"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLSinhVien_Click"/>

                    <Button Content="Quản lý Giảng viên"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLGiangVien_Click"/>

                    <Button Content="Quản lý Môn học"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLMonHoc_Click"/>

                    <Button Content="Quản lý Lớp học phần"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLLop_Click"/>

                    <Button Content="Quản lý lịch"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLLich_Click"/>

                    <Separator Margin="0,5"/>

                    <Button Content="Gửi thông báo"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnQLThongBao_Click"/>

                    <Button Content="Hướng dẫn sử dụng"
                            Margin="0,0,0,5" Padding="5"
                            Click="BtnHDSD_Click"/>
                </StackPanel>
            </Border>

            
        </Grid>
        <!-- FRAME HIỂN THỊ PAGE -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
