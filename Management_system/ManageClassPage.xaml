<Page x:Class="Management_system.Pages.ManageClassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="ManageClassPage" 
      Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ LỚP HỌC PHẦN"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#CC0000"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Margin="0,0,0,20"/>

        <!-- Thanh công cụ -->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Thêm" Width="100" Padding="10,3" Margin="0,0,10,0"
                    Click="BtnAdd_Click"/>
            <Button Content="Tìm kiếm" Width="100" Padding="10,3"
                    Click="BtnSearch_Click"/>
            <TextBox x:Name="txtSearch" Width="300" Height="30" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dtgClass"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  Margin="0,10,0,10"
                  IsReadOnly="True" >

            <DataGrid.Columns>
                <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}"/>
                <DataGridTextColumn Header="Mã lớp" Width="100" Binding="{Binding courseClass_id}"/>
                <DataGridTextColumn Header="Mã môn" Width="100" Binding="{Binding course_id}"/>
                <DataGridTextColumn Header="Phòng" Width="60" Binding="{Binding room}"/>
                <DataGridTextColumn Header="Lịch học" Width="150" Binding="{Binding learnSchedule}"/>
                <DataGridTextColumn Header="Thời lượng" Width="80" Binding="{Binding duration}"/>
                <DataGridTextColumn Header="Kỳ" Width="60" Binding="{Binding semester}"/>
                <DataGridTextColumn Header="Năm" Width="80" Binding="{Binding year}"/>
                <DataGridTextColumn Header="Trạng thái" Width="120" Binding="{Binding status}"/>
                <DataGridTextColumn Header="Số lượng" Width="80" Binding="{Binding capacity}"/>
                <DataGridTextColumn Header="Lịch thi" Width="120" Binding="{Binding examSchedule}"/>

                <!-- Chi tiết -->
                <DataGridTemplateColumn Header="Chi tiết" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Chi tiết" Background="#0094FF" Foreground="White"
                                    Padding="5" Margin="5"
                                    Click="BtnDetail_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Action -->
                <DataGridTemplateColumn Header="Action" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Sửa" Background="#0275d8"
                                        Foreground="White" Padding="5"
                                        Margin="5,0"
                                        Click="BtnEdit_Click"/>

                                <Button Content="Xóa" Background="#d9534f"
                                        Foreground="White" Padding="5"
                                        Margin="5,0"
                                        Click="BtnDelete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
