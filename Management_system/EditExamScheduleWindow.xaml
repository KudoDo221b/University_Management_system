<Window x:Class="Management_system.EditExamScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditExamScheduleWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Mã lịch thi:"/>
            <TextBox x:Name="txtID" Width="200" IsReadOnly="True" Background="#EEE"/>

            <TextBlock Text="Mã lớp học phần:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cmbCourseClass" Width="200"/>

            <TextBlock Text="Lịch thi:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtSchedule" Width="200"/>

            <Button Content="Lưu thay đổi"
                    Width="120"
                    Margin="0,20,0,0"
                    Background="#0275d8"
                    Foreground="White"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
