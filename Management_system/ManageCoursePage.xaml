<Page x:Class="Management_system.Pages.ManageCoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageCoursePage"
      Background="White">

    <Grid>
        <Grid x:Name="grdMonHoc">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TITLE -->
            <TextBlock Text="QUẢN LÝ MÔN HỌC"
                       FontSize="20" FontWeight="Bold"
                       Foreground="#CC0000" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- BUTTONS + SEARCH -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Thêm môn học" Margin="0,0,5,0" Padding="10,3"/>
                    <Button Content="Sửa" Margin="0,0,5,0" Padding="10,3"/>
                    <Button Content="Xóa" Margin="0,0,5,0" Padding="10,3"/>
                    <TextBox Width="200" Margin="10,0,5,0"
                             x:Name="txtSearch" 
                           />
                    <Button Content="Tìm kiếm" Padding="10,3"/>
                </StackPanel>

                <!-- DATAGRID -->
                <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                          x:Name="dgCourse"
                          IsReadOnly="True"
                          CanUserAddRows="False">

                    <DataGrid.Columns>

                        <!-- COURSE ID -->
                        <DataGridTextColumn Header="Mã môn"
                                            Binding="{Binding course_id}"
                                            Width="*"/>

                        <!-- COURSE NAME -->
                        <DataGridTextColumn Header="Tên môn"
                                            Binding="{Binding name}"
                                            Width="2*"/>

                        <!-- CREDIT -->
                        <DataGridTextColumn Header="Số tín chỉ"
                                            Binding="{Binding credit}"
                                            Width="*"/>

                        <!-- DESCRIPTION -->
                        <DataGridTextColumn Header="Mô tả"
                                            Binding="{Binding description}"
                                            Width="3*"/>

                        <!-- PRE-REQUISITE -->
                        <DataGridTextColumn Header="Tiên quyết"
                                            Binding="{Binding pre_requisite}"
                                            Width="2*"/>

                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Grid>
    </Grid>
</Page>
