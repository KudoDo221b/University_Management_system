<Page x:Class="Management_system.Pages.ManageCoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ManageCoursePage"
      Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <TextBlock Text="QUẢN LÝ MÔN HỌC"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#CC0000"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- THANH CÔNG CỤ -->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Thêm" Width="100" Margin="0,0,10,0" Click="BtnAdd_Click"/>
            <Button Content="Tìm kiếm" Width="100" Click="BtnSearch_Click"/>
            <TextBox x:Name="txtSearch" Width="300" Height="30" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- BẢNG -->
        <DataGrid x:Name="dtgCourse"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowHeight="35"
                  Margin="0,10,0,0"
                  IsReadOnly="True">

            <DataGrid.Columns>

                <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}"/>
                <DataGridTextColumn Header="Mã môn" Width="100" Binding="{Binding course_id}"/>
                <DataGridTextColumn Header="Tên môn" Width="200" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Số tín chỉ" Width="100" Binding="{Binding credit}"/>
                <DataGridTextColumn Header="Mô tả" Width="300" Binding="{Binding description}"/>
                <DataGridTextColumn Header="Môn tiên quyết" Width="120" Binding="{Binding pre_requisite}"/>

                <!-- CHI TIẾT -->
                <DataGridTemplateColumn Header="Chi tiết" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Chi tiết"
                                    Background="#0094FF"
                                    Foreground="White"
                                    Click="BtnDetail_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- ACTION -->
                <DataGridTemplateColumn Header="Action" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Sửa" Background="#0275d8" Foreground="White"
                                        Margin="5,0" Click="BtnEdit_Click"/>
                                <Button Content="Xóa" Background="#d9534f" Foreground="White"
                                        Margin="5,0" Click="BtnDelete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
