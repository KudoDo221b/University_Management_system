<Window x:Class="Management_system.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="500">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" Text="Đăng nhập hệ thống"
                   FontSize="20" FontWeight="Bold"
                   Foreground="DarkRed" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10">

            <!-- USERNAME -->
            <TextBlock Text="Tên Đăng nhập:" FontWeight="Bold"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,10" TextChanged="TxtUsername_TextChanged"/>

            <!-- PASSWORD -->
            <TextBlock Text="Mật khẩu:" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,10"/>

            <!-- BUTTON -->
            <Button Content="Đăng nhập" Height="35"
                    Background="#C70000" Foreground="White"
                    FontWeight="Bold"
                    Click="Login_Click"/>
        </StackPanel>

    </Grid>
</Window>
