<Window x:Class="Management_system.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="450" Width="800">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>

            <TextBlock Text="MSSV:"/>
            <TextBox x:Name="txtID"/>

            <TextBlock Text="Họ tên:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtName"/>

            <TextBlock Text="Giới tính:" Margin="0,10,0,0"/>
            <ComboBox x:Name="txtGender" Width="150">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>


            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail"/>

            <TextBlock Text="Khoa:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtKhoa"/>

            <TextBlock Text="Ngành:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtMajor"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Lưu"
                HorizontalAlignment="Center"
                Width="120" Margin="0,20,0,0"
                Click="BtnSave_Click"/>

    </Grid>
</Window>
